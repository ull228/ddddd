<UserControl x:Class="LibraryAssigmentWPF.UserControls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryAssigmentWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox>
            <Button x:Name="btnInput" Content="{Binding ButtonContent, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="18"
                    Foreground="Linen" Background="SlateGray" FontWeight="UltraBlack" BorderBrush="AntiqueWhite" BorderThickness="3" Margin="0,5,0,5"
                    MinWidth="255" MinHeight="50" MaxWidth="400" MaxHeight="130" Click="btnInput_Click"/>
        </Viewbox>
    </Grid>
</UserControl>
